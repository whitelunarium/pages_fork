    "# Run the cell below to embed and play the demo inside the notebook\n",
    "from IPython.display import HTML, display\n",
    "html = '''\n",
    "<div id=\"notebook-snake-demo\">\n",
    "<!-- Embed the game's HTML/CSS/JS inline so it runs in the notebook output -->\n",
    "<style>\n",
    "    .wrap{ margin-left:auto; margin-right:auto; }\n",
    "    canvas{ border-style: solid; border-width: 10px; border-color: #FFFFFF; }\n",
